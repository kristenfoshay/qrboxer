{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "month": {
        "type": "integer",
        "minimum": 1,
        "maximum": 12
      },
      "year": {
        "type": "integer",
        "minimum": 4
      },
      "username": {
        "type": "string",
        "minLength": 1,
        "maxLength": 25
      }
    },
    "additionalProperties": false,
    "required": [
      "location",
      "month",
      "year"
    ]
  }