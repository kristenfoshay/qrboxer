{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "description": {
        "type": "string",
        "maxLength": 500
      },
      "location": {
        "type": "string",
        "maxLength": 100
      },
      "room": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "move": {
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "required": [
      "name",
      "room",
      "move"
    ]
}
